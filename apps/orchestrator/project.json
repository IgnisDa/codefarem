{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "orchestrator",
  "implicitDependencies": ["main-db", "protobuf"],
  "projectType": "application",
  "sourceRoot": "apps/orchestrator/src",
  "targets": {
    "build": {
      "executor": "@ignisda/nx-rust:build",
      "options": {
        "release": false
      },
      "outputs": [
        "target/debug/farem-main*",
        "target/debug/*/farem-main*",
        "target/release/farem-main*",
        "target/release/*/farem-main*"
      ],
      "configurations": {
        "production": {
          "release": true
        }
      }
    },
    "run": {
      "executor": "@ignisda/nx-rust:run",
      "options": {},
      "configurations": {
        "production": {
          "release": true
        }
      }
    },
    "test": {
      "executor": "@ignisda/nx-rust:nextest",
      "options": {}
    },
    "lint": {
      "executor": "@ignisda/nx-rust:clippy",
      "options": {
        "fix": false,
        "failOnWarnings": true,
        "noDeps": true
      }
    }
  },
  "tags": []
}
