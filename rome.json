{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "files": {
    "ignore": ["*dist*", "*coverage*", "build"]
  },
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 80
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingComma": "none"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  }
}
