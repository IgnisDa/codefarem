{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/main-db/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "edgeql-js",
        "cwd": "libs/main-db"
      }
    },
    "lint-js": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["libs/main-db/**/*.ts"]
      }
    },
    "lint-edgeql": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "dependsOn": [
        { "projects": "self", "target": "lint-js" },
        { "projects": "self", "target": "lint-edgeql" }
      ],
      "options": {
        "command": "echo"
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/main-db"],
      "options": {
        "jestConfig": "libs/main-db/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
