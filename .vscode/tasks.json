{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run farem services",
            "detail": "Starts all the farem services",
            "type": "shell",
            "command": "echo 'Stopping services...'",
            "dependsOn": [
                "farem-cpp",
                "farem-go",
                "farem-rs",
                "farem-run",
                "website",
                "orchestrator"
            ]
        },
        {
            "label": "farem-cpp",
            "type": "shell",
            "isBackground": true,
            "command": "pnpm nx run compilers:run --bin cpp-compiler --watch",
            "detail": "Run cpp compiler service",
            "options": {
                "env": {
                    "PORT": "5002"
                }
            },
        },
        {
            "label": "farem-go",
            "type": "shell",
            "isBackground": true,
            "command": "pnpm nx run compilers:run --bin go-compiler --watch",
            "detail": "Run go compiler service",
            "options": {
                "env": {
                    "PORT": "5003"
                }
            },
        },
        {
            "label": "orchestrator",
            "type": "shell",
            "isBackground": true,
            "command": "cargo watch -cqx 'run --package orchestrator'",
            "detail": "Run the orchestrator service",
            "options": {
                "env": {
                    "ROCKET_PORT": "8000"
                }
            },
        },
        {
            "label": "farem-rs",
            "type": "shell",
            "isBackground": true,
            "command": "pnpm nx run compilers:run --bin rs-compiler --watch",
            "detail": "Run rust compiler service",
            "options": {
                "env": {
                    "PORT": "5001"
                }
            },
        },
        {
            "label": "farem-run",
            "type": "shell",
            "isBackground": true,
            "command": "cargo watch -cqx 'run --package farem-run'",
            "detail": "Run wasm execution farem service",
            "options": {
                "env": {
                    "ROCKET_PORT": "5004"
                }
            },
        },
        {
            "label": "website",
            "type": "shell",
            "isBackground": true,
            "command": "pnpm nx start website",
            "detail": "Run the main website server",
            "options": {},
        },
    ]
}
