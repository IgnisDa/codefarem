{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run farem services",
            "detail": "Starts all the farem services",
            "type": "shell",
            "dependsOn": [
                "cpp-compiler",
                "go-compiler",
                "rs-compiler",
                "executor",
                "website",
                "orchestrator"
            ]
        },
        {
            "label": "cpp-compiler",
            "type": "shell",
            "isBackground": true,
            "command": "pnpm nx run compilers:run --bin cpp-compiler --watch",
            "detail": "Run the cpp compiler service",
            "options": {
                "env": {
                    "PORT": "5002"
                }
            },
        },
        {
            "label": "go-compiler",
            "type": "shell",
            "isBackground": true,
            "command": "pnpm nx run compilers:run --bin go-compiler --watch",
            "detail": "Run the go compiler service",
            "options": {
                "env": {
                    "PORT": "5003"
                }
            },
        },
        {
            "label": "orchestrator",
            "type": "shell",
            "isBackground": true,
            "command": "cargo watch -cqx 'run --package orchestrator'",
            "detail": "Run the orchestrator service",
            "options": {
                "env": {
                    "ROCKET_PORT": "8000"
                }
            },
        },
        {
            "label": "rs-compiler",
            "type": "shell",
            "isBackground": true,
            "command": "pnpm nx run compilers:run --bin rs-compiler --watch",
            "detail": "Run the rust compiler service",
            "options": {
                "env": {
                    "PORT": "5001"
                }
            },
        },
        {
            "label": "executor",
            "type": "shell",
            "isBackground": true,
            "command": "cargo watch -cqx 'run --package executor'",
            "detail": "Run the wasm execution service",
            "options": {
                "env": {
                    "PORT": "5004"
                }
            },
        },
        {
            "label": "website",
            "type": "shell",
            "isBackground": true,
            "command": "pnpm nx start website",
            "detail": "Run the main website server",
            "options": {},
        },
    ]
}
